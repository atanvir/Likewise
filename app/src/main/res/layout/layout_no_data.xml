<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/emptyBgCl"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/include"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:id="@+id/textView120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0.2dp"
            android:text="@string/feels_empty_here"
            android:textColor="#E6D0F3"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/font"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/blankIv"
            app:layout_constraintStart_toStartOf="@+id/blankIv"
            app:layout_constraintTop_toTopOf="@+id/blankIv" />


        <TextView
            android:id="@+id/textView121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:elevation="0.2dp"
            android:fontFamily="@font/font"
            android:text="@string/time_to_start_a_game"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/blankIv"
            app:layout_constraintStart_toStartOf="@+id/blankIv"
            app:layout_constraintTop_toBottomOf="@+id/textView120" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="0.2dp"
            android:scaleX="-1"
            android:src="@drawable/arrow"
            app:layout_constraintBottom_toTopOf="@+id/createText"
            app:layout_constraintEnd_toEndOf="@+id/createText"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="@+id/createText"
            app:layout_constraintTop_toBottomOf="@+id/textView121" />


        <ImageView
            android:id="@+id/blankIv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_bg"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />





        <TextView
            android:id="@+id/playText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:elevation="0.2dp"
            android:text="RANDOM PARTNER"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView18"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:elevation="0.2dp"
            android:text="PLAY WITH A FRIEND"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView119"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:text="Compete and earn coins"
            android:textAllCaps="false"
            android:textColor="#E6D0F3"
            android:textSize="12dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/blankIv"
            app:layout_constraintStart_toStartOf="@+id/playText" />

        <TextView
            android:id="@+id/textView119"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0.5dp"
            android:text="Create your own game"
            android:textAllCaps="false"
            android:textColor="#E6D0F3"
            android:textSize="12dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/textView18"
            app:layout_constraintEnd_toEndOf="@+id/createText" />

</androidx.constraintlayout.widget.ConstraintLayout>
