<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainCl"
        android:layout_width="match_parent"
        android:background="@drawable/drawable_white_corners2"
        android:padding="15dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/headerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/down"
            android:text="What is Lorem Iplsum"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/desText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="When you create a game, you must choose a GOAL and a sub-goal: \n

    DESCRIBE: what we see, feel, or think.

    LIST: all words relevant to the selected theme: Animals, Brands, Celebrities, Cities, Female Names, Food, Hobbies, Item, Male Names, Music Sports, Places to hang, etc.

    IMAGINE: what would we say if…, what happened before…, what happens after…

    ANSWER: a question.
"
            android:textSize="15dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/headerText"
            app:layout_constraintStart_toStartOf="@+id/headerText"
            app:layout_constraintTop_toBottomOf="@+id/headerText" />



    </androidx.constraintlayout.widget.ConstraintLayout>





</layout>
