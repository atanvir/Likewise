<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="0.1dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

  <ImageView
      android:id="@+id/ivView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:elevation="3dp"
      app:layout_constraintBottom_toBottomOf="@+id/chatBoxEd"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/chatBoxEd"
      app:srcCompat="@drawable/eye_grey" />

  <ImageView
      android:id="@+id/ivSend"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:elevation="3dp"
      app:layout_constraintBottom_toBottomOf="@+id/chatBoxEd"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/chatBoxEd"
      app:srcCompat="@drawable/send" />

  <EditText
      android:id="@+id/chatBoxEd"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/bg_const_white_edittext"
      android:cursorVisible="true"
      android:paddingLeft="20dp"
      android:maxLines="3"
      android:elevation="3dp"
      android:hint="@string/type_a_message"
      android:scrollIndicators="right"
      android:scrollbars="vertical"
      android:paddingTop="15dp"
      android:paddingRight="20dp"
      android:paddingBottom="15dp"
      android:textColor="@color/white"
      android:textColorHint="@color/white"
      android:textSize="14dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/ivSend"
      app:layout_constraintStart_toEndOf="@+id/ivView"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>