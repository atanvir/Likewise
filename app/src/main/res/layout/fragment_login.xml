<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/emailEd"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/drawable_white_corners"
        android:drawableLeft="@drawable/drawable_selector_mail"
        android:drawablePadding="16dp"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="15dp"
        android:maxLength="40"
        android:imeOptions="actionNext"
        android:elevation="2dp"
        android:hint="@string/email_or_username"
        android:paddingLeft="20dp"
        android:textColor="@color/text_selector_feild"
        android:textColorHint="@color/hint_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/passEd"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/drawable_white_corners"
        android:drawableLeft="@drawable/drawable_selector_password"
        android:drawablePadding="16dp"
        android:elevation="2dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:maxLength="20"
        android:imeOptions="actionDone"
        android:hint="@string/password"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/text_selector_feild"
        android:textColorHint="@color/hint_selector"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEd" />


    <ImageView
        android:id="@+id/ivShowPassword"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:elevation="5dp"
        android:src="@drawable/eye_un"
        app:layout_constraintBottom_toBottomOf="@+id/passEd"
        app:layout_constraintEnd_toEndOf="@+id/passEd"
        app:layout_constraintTop_toTopOf="@+id/passEd" />





</androidx.constraintlayout.widget.ConstraintLayout>

</layout>